<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:view="clr-namespace:GestorDBTFG.Model" x:DataType="view:LoginModel"
             x:Class="GestorDBTFG.View.LoginPage">
    <Grid>
        <Button Text="ConfiguraciÃ³n" Margin="0,0,40,0" Clicked="Config" HorizontalOptions="End" WidthRequest="50" HeightRequest="50" VerticalOptions="Start"/>
        <Frame BorderColor="Black" Padding="0" HorizontalOptions="Center" VerticalOptions="Start">
            <StackLayout Margin="20" Padding="25,20,20,25" WidthRequest="250" HeightRequest="400" BackgroundColor="LightGrey">

                <Label Text="Login" Padding="0,5,15,5" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>

                <Label Text="Username" Padding="0,5,2,5" TextColor="Black"/>
                <Entry Text="{Binding Username}" TextColor="Black" />

                <Label Text="Password" Padding="10,5,20,5" TextColor="Black"/>
                <Entry Text="{Binding Password}" TextColor="Black" IsPassword="True" />

                <Button Text="Login" VerticalOptions="EndAndExpand" HorizontalOptions="Fill" Clicked="Login" TextColor="White"/>

            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
